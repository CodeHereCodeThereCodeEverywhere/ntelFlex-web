---
import Heading from "../components/Description/Heading";
import Header from "../components/Navigation/Header";
import { metaTitle } from "../data/data";
import ContactUs from '../components/ContactComponents/ContactUs'
import ContactInfo from "../components/ContactComponents/ContactInfo";
import Footer from "../components/Footer/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg" />
    <link rel="icon" type="image/png" href="/assets/images/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Contact US | NtelFlex</title>
  </head>
  <body class="bg-bgColor  ">
    <Header path={"/contact"} client:only="react"/>
    <Heading props="Contact Us" />
    <div class=" justify-center flex  mt-[80px] w-full items-center">
      <img src="/Contact/hero.webp" alt="heroImage" class="zxL:mx-[100px] xxl:mx-[100px] xl:mx-[100px] md:mx-auto sm:mx-auto phone:mx-auto  " />
    </div>
    <ContactUs />
    <ContactInfo />
    <Footer />
  </body>
</html>
