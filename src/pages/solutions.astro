---
import Header from "../components/Navigation/Header";

import Footer from "../components/Footer/Footer.astro";
import { OurServices, metaTitle, solutionsHero } from "../data/data";
import ServiceAndSolutionsHero from "../components/HeroComponents/ServiceAndSolutionsHero";
import ServicesComponent from "../components/ServicesComponent/ServicesComponent";
import OurProcess from "../components/ServicesComponent/OurProcess";
import { serviceTitle } from "./index.astro";

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg" />
    <link rel="icon" type="image/png" href="/assets/images/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Solutions | NtelFlex</title>
  </head>

  <body class="bg-bgColor">
    <Header path={"/solutions"} client:only="react" />    
    <ServiceAndSolutionsHero props={solutionsHero} />
    <ServicesComponent client:only="react"
      serviceTitle={"Solutions" as serviceTitle}
      props={OurServices.solutions}
    />
    <!-- <OurProcess /> -->
    <Footer />
  </body>
</html>
